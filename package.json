{
  "name": "tool-hub",
  "private": true,
  "version": "1.0.0",
  "description": "常用工具合集（Electron + Vite + React）",
  "author": {
    "name": "ZikQ-Smily",
    "email": "ZikQ-Smily@users.noreply.github.com"
  },
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite --port 5173 --strictPort",
    "dev:electron": "cross-env ELECTRON_START_URL=http://localhost:5173 wait-on tcp:5173 && electron .",
    "build": "vite build",
    "dist:win": "electron-builder --win nsis portable",
    "dist:mac": "electron-builder --mac dmg zip",
    "dist:linux": "electron-builder --linux AppImage deb",
    "dist:all:local": "npm run build && npm run dist:win && npm run dist:mac && npm run dist:linux",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "cn.sajuna.toolhub",
    "productName": "工具合集",
    "directories": { "output": "release" },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "asar": true,
    "extraMetadata": { "main": "electron/main.cjs" },

    "win": {
      "icon": "public/icon.ico",
      "target": [
        { "target": "nsis", "arch": ["x64", "ia32", "arm64"] },
        { "target": "portable", "arch": ["x64", "ia32", "arm64"] }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "工具合集",
      "createDesktopShortcut": false,
      "createStartMenuShortcut": false,
      "perMachine": false,
      "artifactName": "ToolHub_${version}_${arch}-setup.${ext}"
    },
    "portable": {
      "artifactName": "ToolHub_${version}_${arch}.exe"
    },

    "mac": {
      "category": "public.app-category.utilities",
      "icon": "public/icon.icns",
      "target": [
        { "target": "dmg", "arch": ["x64", "arm64"] },
        { "target": "zip", "arch": ["x64", "arm64"] }
      ],
      "artifactName": "ToolHub_${version}_${arch}.${ext}"
    },

    "linux": {
      "category": "Utility",
      "icon": "public/icon.png",
      "target": [
        { "target": "AppImage", "arch": ["x64", "arm64"] },
        { "target": "deb", "arch": ["x64", "arm64"] }
      ],
      "maintainer": "ZikQ-Smily <ZikQ-Smily@users.noreply.github.com>",
      "artifactName": "ToolHub_${version}_${arch}.${ext}"
    }
  },
  "dependencies": {
    "lucide-react": "^0.541.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@types/node": "^20.14.10",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "postcss": "^8.5.6",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.3",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.4.5",
    "vite": "^4.5.14",
    "wait-on": "^7.2.0"
  }
}
